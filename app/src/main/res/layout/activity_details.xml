<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- POSTER PRINCIPAL -->
        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="#333333" />

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título do Filme"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- LINHA PLAY + FAVORITO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- BOTÃO PLAY COMO CARDVIEW CLICÁVEL -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_gradient_red">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▶ PLAY"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assista agora"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- BOTÃO FAVORITO -->
            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_star_border"
                android:tint="#FFFFFF"
                android:contentDescription="Favorito" />
        </LinearLayout>

        <!-- BOTÃO CONTINUAR -->
        <Button
            android:id="@+id/btnResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar de onde parei"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@color/design_default_color_primary"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- ÁREA DE DOWNLOAD -->
        <LinearLayout
            android:id="@+id/btnDownloadArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_download_area"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgDownloadState"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dl_arrow"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvDownloadState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Baixar"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- INFORMAÇÕES -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETALHES"
            android:textColor="#E50914"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota: N/A"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gênero: N/A"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDirector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diretor: N/A"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elenco: N/A"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- SINOPSE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SINOPSE"
            android:textColor="#E50914"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinopse do filme aqui..."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp" />

        <!-- FORMATO / CONTAINER (OPCIONAL) -->
        <TextView
            android:id="@+id/tvContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formato: MP4"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
