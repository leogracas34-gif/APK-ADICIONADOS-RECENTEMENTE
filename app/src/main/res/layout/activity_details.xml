<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- POSTER PRINCIPAL -->
        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="#333333" />

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título do Filme"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- BOTÃO PLAY -->
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ PLAY"
            android:textAllCaps="false"
            android:background="@drawable/bg_gradient_red"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- BOTÃO RESUMIR -->
        <Button
            android:id="@+id/btnResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar de onde parei"
            android:textAllCaps="false"
            android:background="#333333"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- FAVORITO + DOWNLOAD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_star_border"
                android:tint="#FFFFFF"
                android:contentDescription="Favorito" />

            <LinearLayout
                android:id="@+id/btnDownloadArea"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:background="#222222"
                android:layout_marginStart="12dp">

                <ImageView
                    android:id="@+id/imgDownloadState"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dl_arrow"
                    android:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tvDownloadState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baixar"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- INFORMAÇÕES -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETALHES"
            android:textColor="#E50914"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota: 4.2/5"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gênero: Ação"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDirector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diretor: ..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elenco: ..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- SINOPSE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SINOPSE"
            android:textColor="#E50914"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinopse do filme aqui..."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
