<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- POSTER PRINCIPAL -->
        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="#333333"
            app:cardCornerRadius="12dp" />

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título do Filme"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- BOTÃO PLAY -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bg_gradient_red">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶ PLAY"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assista agora"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- INFORMAÇÕES -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETALHES"
            android:textColor="#E50914"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota: 4.2/5"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gênero: Ação"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDuracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duração: 120 min"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvAno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ano: 2023"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDiretor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diretor: ..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvElenco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elenco: ..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- SINOPSE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SINOPSE"
            android:textColor="#E50914"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSinopse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinopse do filme aqui..."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:lineSpacing="2dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formato: MP4"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
